#:include cutpointline.kv

RootWindow:
    orientation: "vertical"
    BoxLayout:
        padding: 10, 10, 10, 10
        spacing: 20
        size_hint_y: None
        height: 60
        orientation: "horizontal"
        Button:
            size_hint_x: None
            width: 200
            text: "Load video"
            on_release: video_id.show_load(video_id.verify_load_location)
        ROISelector:
            id: roi_selector_id
            disabled: not video_id.video_loaded
        Button:
            text: "Export frame differences"
            size_hint_x: None
            width: 200
            disabled: not video_id.video_loaded
            on_release: video_id.show_save(video_id.verify_save_location)
    VideoWidget:
        id: video_id
        video_loaded: False
        size_hint_y: 1
        size_hint_x: 1
        cutpoint_panel: cutpoint_id
    CutpointPanel:
        padding: 0, 5, 0, 0
        id: cutpoint_id
        height: 100
        size_hint_y: None
        disabled: not video_id.video_loaded
        on_value: video_id.seek_video(args[1])

<-VideoWidget>:
    vid_size: (0, 0)
    vid_pos: (0, 0)
    canvas:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            texture: self.texture
            size: self.vid_size
            pos: self.vid_pos

<ROISelector>:
    orientation: "horizontal"
    Button:
        id: mainbutton_id
        text: "Select ROI\u2026"
        on_release: root.dropdown.open(args[0])
    Button:
        id: removebutton_id
        text: "Remove current ROI"
        on_release: root.roi_list.remove(root.roi_list.selected)

<LoadDialog>:
    load: None
    auto_dismiss: False
    size_hint: (0.9, 0.9)
    title: "Load file"
    FileBrowser:
        id: filechooser
        size: root.size
        pos: root.pos
        on_success: root.load(filechooser.path, filechooser.filename)
        on_canceled: root.dismiss()

<SaveDialog>:
    save: None
    auto_dismiss: False
    size_hint: (0.9, 0.9)
    title: "Save file"
    FileBrowser:
        id: filechooser
        size: root.size
        pos: root.pos
        on_success: root.save(filechooser.path, filechooser.filename)
        on_canceled: root.dismiss()

<ConfirmDialog>:
    size_hint: (None, None)
    size: (300, 200)
    auto_dismiss: False
    title: "Warning"
    text: ""
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        Label:
            text: root.text
        GridLayout:
            cols: 2
            size_hint_y: 0
            height: 50
            Button:
                text: "Yes"
                on_release: root.yes()
            Button:
                text: "No"
                on_release: root.dismiss()

<VideoProgress>:
    title: "Processing video\u2026"
    size_hint: (0.9, 0.9)
    auto_dismiss: False
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        Image:
            id: image_id
            allow_stretch: True
            keep_ratio: True
        ProgressBar:
            id: progressbar_id
            max: 1
            size_hint_y: None
            height: 50
